<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">AWS</h1>
        <hr class="my-4">
        <p class="lead">AWSに関する情報が記載されています</p>
    </div>
</div>
<div class="container-fluid">
        <% if flash[:notice] %>
            <div class="alert alert-primary"><%= flash[:notice] %></div>
        <% end %>
</div>

<div class="container">
    <div class="row">
        <h1>Information</h1>
        <div class="ml-auto boards__linkBox">
            <a href="/homes/new" class="btn btn-outline-dark">新規作成</a>
        </div>
    </div>
</div>    

<div class="container">
    <div class="row">

        <table class="table table-bordered">
            <thead>
                <tr>
                <th width="5%" scope="col" >No</th>
                <th width="40%" scope="col" >Title</th>
                <th width="13%" scope="col" >Name</th>
                <th width="12%" scope="col" >C-day</th>
                <th width="12%" scope="col" >U-day</th>
                <th width="5%" scope="col" >update</th>
                <th width="5%" scope="col" >edit</th>
                <th width="5%" scope="col" >delete</th>
                </tr>
            </thead>
            <tbody>
                <% @Users.each do |user| %>
                <tr>
                    <th scope="row"><%= user.id %></th>
                    <td><%= user.title %></td>
                    <td><%= user.name %></td>
                    <td><%= user.created_at.to_s(:datetime_jp) %></td>
                    <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                    <td><%= link_to "show", "/homes/#{user.id}/show", class: 'btn btn-outline-dark', method: :get%></td>
                    <td><%= link_to "update", "/homes/#{user.id}/edit", class: 'btn btn-outline-dark', method: :get%></td>
                    <td><%= link_to "delete", "/homes/#{user.id}", class: 'btn btn-outline-dark', method: :delete, data: {confirm: "削除しますか?"} %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


